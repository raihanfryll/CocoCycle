<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F4E37">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/backleft"
            app:tint="#6F4E37" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi Pengambilan"
            android:textColor="#6F4E37"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Isi Konten -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Lokasi Pengambilan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi Pengambilan"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/alamat"
                    android:background="@drawable/bulatlokasipengambilan"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/locationIcon"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rumah"
                        android:textStyle="bold"
                        android:textColor="#6F4E37" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jl. Kelapa Muda No.123,\nDenpasar, Bali"
                        android:textColor="#888888"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Ubah"
                    android:textColor="#6F4E37"
                    android:textStyle="bold"
                    android:textSize="12sp" />
            </RelativeLayout>

            <!-- Jadwal Pengambilan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Pengambilan"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Hari -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Contoh Hari -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senin"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/4"
                        android:textColor="#888888"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Contoh Hari -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selasa"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21/4"
                        android:textColor="#888888"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Contoh Hari -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rabu"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22/4"
                        android:textColor="#888888"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Contoh Hari -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kamis"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23/4"
                        android:textColor="#888888"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Contoh Hari -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumat"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24/4"
                        android:textColor="#888888"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Contoh Hari -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sabtu"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25/4"
                        android:textColor="#888888"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Contoh Hari -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btnMinggu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minggu"
                        android:textColor="#000000"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26/4"
                        android:textColor="#888888"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Tambah hari lainnya di sini -->
            </LinearLayout>

            <!-- Jam -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Jam Pilihan -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="07.00 am"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="08.00 am"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="09.00 am"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnJam10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="10.00 am"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="11.00 am"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="12.00 am"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#000000" />

                <!-- Tambah tombol jam lain seperti 10.00, 11.00, dll -->
            </GridLayout>

            <!-- Tombol Konfirmasi -->
            <Button
                android:id="@+id/btnKonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Pengambilan"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="80dp"
                android:backgroundTint="#D2B48C"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/proicons_home"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/proicons_chat"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/keranjang"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ei_user"
            android:scaleType="centerInside" />
    </LinearLayout>

</RelativeLayout>